# Docker Environment Configuration
# Copy this file to .env and configure for your environment

# Application Version
VERSION=latest

# Port Configuration
APP_PORT=8501
NGINX_PORT=80
NGINX_SSL_PORT=443

# Streamlit Configuration
ENABLE_CORS=false

# Credentials (absolute path to credentials file)
CREDENTIALS_PATH=./oauth_credentials.json

# Database Configuration (if using external DB in future)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=chitfund
# DB_USER=chitfund
# DB_PASSWORD=changeme

# Security
# SECRET_KEY=your-secret-key-here
# SESSION_TIMEOUT=3600

# Logging
LOG_LEVEL=INFO
